{
  "permissions": {
    "allow": [
	  "Bash(cd *)",
      "Bash(clasp *)",
      "Bash(curl *)",
      "Bash(node *)",
      "Bash(npm *)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git tag *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(echo *)",
      "Bash(mkdir *)",
      "Bash(chmod *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(pwd)",
      "Bash(date *)",
      "Bash(wc *)",
      "Bash(jq *)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(git push *)",
      "Bash(git checkout main)",
      "Bash(git checkout master)",
      "Bash(git branch -D *)",
      "Bash(git merge *)",
      "Bash(clasp login*)",
      "Read(.env*)",
      "Write(.env*)",
      "Write(apps-script/src/correlation/*)",
      "Write(apps-script/src/logging/*)",
      "Edit(apps-script/src/correlation/*)",
      "Edit(apps-script/src/logging/*)",
      "MultiEdit(apps-script/src/correlation/*)",
      "MultiEdit(apps-script/src/logging/*)",
      "Write(**/*settings.json)",
      "Write(**/*settings.local.json)",
      "Write(.claude/settings.json)",
      "Write(.claude/settings.local.json)",
      "Edit(**/*settings.json)",
      "Edit(**/*settings.local.json)",
      "Edit(.claude/settings.json)",
      "Edit(.claude/settings.local.json)",
      "MultiEdit(**/*settings.json)",
      "MultiEdit(**/*settings.local.json)",
      "MultiEdit(.claude/settings.json)",
      "MultiEdit(.claude/settings.local.json)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/update-changelog.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/check-gotchas-on-error.sh"
          }
        ]
      }
    ]
  }
}
